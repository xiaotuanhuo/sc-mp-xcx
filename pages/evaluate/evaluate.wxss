@import '/common/common.wxss';

.evaluatePage {
  padding:10rpx 60rpx 80rpx 60rpx;
}
.evaluateLogo {
  text-align: center;
}
.wux-divider__text {
  color: #C6C6C6;
}
.evaluateScore {
  text-align: center;
}
.evaluateScoreText {
  color:#FE9D63;
  font-weight: bolder;
}
.evaluateRemark {
  height: 200rpx;
  width: 100%;
  border: 1px solid #b3afaf;
  border-radius: 8px;
  padding: 10rpx;
  box-sizing: border-box;
}
.evaluateLabel {
  margin-bottom: 40rpx;
}
.labelText {
  text-align: center;
  color: #B5B5B5;
  background-color:transparent;
  font-size: 14px;
  border-radius: 25rpx;
  cursor: pointer;
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  border: 2px solid #B5B5B5;
  padding: 15rpx;
  margin-top: 40rpx;
}
.evaluateView {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.evaluateRemarkPlaceholder {
  font-size: 13px;
  color: #C6C6C6;
}
.evaluateSubmit {
  background-color: #F69E3C;
  color: #ffffff;
}